#include "funciones.h"

void hongoCara1 (){

glBegin(GL_QUADS);
glVertex2f(2.0,0.0);
glVertex2f(2.0,1.2);
glVertex2f(3.0,1.2);
glVertex2f(3.0,0.0);
glEnd();

}
void hongoCara2 (){

	glBegin(GL_QUADS);
	glVertex2f(1.9,0.2);
	glVertex2f(1.9,0.8);
	glVertex2f(3.1,0.8);
	glVertex2f(3.1,0.2);
	glEnd();

	}
void ojo1 (){

	glBegin(GL_QUADS);
