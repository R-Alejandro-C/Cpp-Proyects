///////////////////////
void CañonFrente(){
	glBegin(GL_LINE_LOOP);
	glVertex2f(-2.0, 3.0);
	glVertex2f(-4.0, 1.0);
	glVertex2f(-8.0, 1.0);
	glVertex2f(-8.0, 9.0);
	glVertex2f(-4.0, 9.0);
	glVertex2f(-2.0, 7.0);
	glEnd();
}

void Ojo(){
	glBegin(GL_QUADS);
	glVertex2f(-4.0,6.0);
	glVertex2f(-5.0, 6.0);
	glVertex2f(-5.0, 7.0);
	glVertex2f(-4.0, 7.0);
	glEnd();
}
void Cola(){
