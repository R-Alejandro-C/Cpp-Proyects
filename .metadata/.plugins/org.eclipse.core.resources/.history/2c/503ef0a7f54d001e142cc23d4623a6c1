
#include <iostream>
#include <GL/glut.h>
using namespace std;

void initializar(){
	glClearColor(0.0,1.0,0.0,1.0);
	glMatrixMode(GL_PROJECTION);
	glLoadIdentity();
	glOrtho(-16.0,16.0,-16.0,16.0,-16.0,16.0);

}

void pie1 (){

glBegin(GL_POLYGON);
glVertex2f(1.0,1.0);
glVertex2f(1.0,1.35);
glVertex2f(1.45,1.35);
glVertex2f(1.45,1.7);
glVertex2f(2.22,1.7);
glVertex2f(2.22,1.0);
glEnd();

}

void pie2 (){

glBegin(GL_POLYGON);
glVertex2f(3.89,1.0);
glVertex2f(3.89,1.7);
glVertex2f(4.67,1.7);
glVertex2f(4.67,1.35);
glVertex2f(5.12,1.35);
glVertex2f(5.12,1.0);
glEnd();

}

void piernasP1 (){

	glBegin(GL_QUADS);
	glVertex2f(1.83,1.7);
	glVertex2f(2.61,1.7);
	glVertex2f(2.61,2.5);
	glVertex2f(1.83,2.5);
	glEnd();

}
void piernasP2 (){

	glBegin(GL_QUADS);
	glVertex2f(3.5,2.5);
	glVertex2f(3.5,1.7);
	glVertex2f(4.28,1.7);
	glVertex2f(4.28,2.5);
	glEnd();

}
void piernasP3 (){

	glBegin(GL_QUADS);
	glVertex2f(3.1,2.1);
	glVertex2f(3.1,2.5);
	glVertex2f(3.9,2.5);
	glVertex2f(3.9,2.1);

	glEnd();

}


void piernasP4 (){

	glBegin(GL_QUADS);
	glVertex2f(2.23,2.5);
	glVertex2f(2.23,3.25);
	glVertex2f(3.45,3.25);
	glVertex2f(3.45,2.5);

	glEnd();

}
void boton (){

	glBegin(GL_QUADS);
	glVertex2f(2.25,2.75);
	glVertex2f(2.25,3.15);
	glVertex2f(2.45,3.15);
	glVertex2f(2.45,2.75);

	glEnd();

}
void boton2 (){

	glBegin(GL_QUADS);
	glVertex2f(3.25,2.75);
	glVertex2f(3.25,3.15);
	glVertex2f(3.43,3.15);
	glVertex2f(3.43,2.75);

	glEnd();

}

void liga1 (){

	glBegin(GL_QUADS);

	glVertex2f(2.35,4);
	glVertex2f(2.23,4);
	glVertex2f(2.23,3.25);
	glVertex2f(2.35,3.25);
	glEnd();

}

void liga2 (){

	glBegin(GL_QUADS);

	glVertex2f(3.35,3.75);
	glVertex2f(3.35,3.25);
	glVertex2f(3.45,3.25);
	glVertex2f(3.45,3.75);
	glEnd();

}
void torso (){

	glBegin(GL_QUADS);

	glVertex2f(3.38,3.42);
	glVertex2f(3.38,3.25);
	glVertex2f(2.23,3.25);
	glVertex2f(2.23,3.42);
	glEnd();

}

void torsoRojo1 (){

	glBegin(GL_POLYGON);

	glVertex2f(2.35,3.25);
	glVertex2f(2.35,4);
	glVertex2f(3.45,4);
	glVertex2f(3.45,3.75);
	glVertex2f(3.35,3.75);
	glVertex2f(3.35,3.25);
	glEnd();

}




void planoCarteciano (){

glBegin(GL_LINES);
glVertex2f(-10.0,0.0);
glVertex2f(10.0,0.0);
glEnd();
glBegin(GL_LINES);
glVertex2f(0.0,-10.0);
glVertex2f(0.0,10.0);
glEnd();

}

void Dibujar(){
	glClear(GL_COLOR_BUFFER_BIT);
	planoCarteciano();

	glColor3f(0.9f,0.5f,0.0f);
	pie1();
	pie2();

	glColor3f(0.0f,0.0f,1.0f);
	piernasP1();
	piernasP2();
	piernasP3();
	piernasP4();
	liga1();
	liga2();
	torso();
	glColor3f(1.0f,1.0f,0.0f);
	boton();
	boton2();
	glColor3f(1.0f,0.0f,0.0f);
	torsoRojo1();
	glFlush();
}

int main (int argc, char**argv){
	cout <<"Hola"<<endl;
	glutInit(&argc,argv);
	glutInitDisplayMode(GLUT_SINGLE|GLUT_RGB);
	glutInitWindowSize(650,460);
	glutCreateWindow("Primear ventana");
	initializar();
	glutDisplayFunc(Dibujar);
	glutMainLoop();
	return 0;
}


